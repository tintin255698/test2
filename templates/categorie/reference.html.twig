{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}

    <div class="container">
    <h1 class=" mt-3 mb-3">Detail du produit</h1>
    <div class="row">
    <div class="col-lg-6">


        {% for repos in repo %}
        <li>{{ repos.reference }}</li>
        <li>{{ repos.calibre}}</li>
        <li>{{ repos.ecart }}</li>
        <li>{{ repos.hauteur }}</li>
    </div>
    <div class="col-lg-6">
        <li>{{ repos.codeProduit }}</li>
        <li>{{ repos.codeCouleur }}</li>

        {{ repos.isNouveaute() }}
    </div>
    <div>


    <hr>

            <h3>Ajouter un commentaire</h3>

            {{ form_start(form) }}
            {{ form_widget(form)}}
            <button type="submit" class="btn btn-primary mb-5">Ajouter</button>
            {{ form_end(form) }}


        <hr>

        <h3>Ajouter un commentaire</h3>

         {% for commentaires in commentaire %}
{{commentaires.createdAt|date("m/d/Y")}}
{{commentaires.note}}
{{commentaires.contenu}}<br>
    {% endfor %}



        </div>

    {% endfor %}

{% endblock %}